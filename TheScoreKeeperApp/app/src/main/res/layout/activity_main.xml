<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.dennis.scores.MainActivity">

    <LinearLayout
        android:id="@+id/epl_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/epl_header" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/score_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/epl_logo"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:paddingLeft="16dp"
            android:src="@drawable/chelseas_logo" />

        <TextView
            android:id="@+id/chelsea_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="sans-serif-medium"
            android:padding="5dp"
            android:gravity="center"
            android:text="5"
            android:textColor="#000"
            android:background="#00ff85"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/goal" />

        <TextView
            android:id="@+id/man_u_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"
            android:background="#00ff85"
            android:fontFamily="sans-serif-medium"
            android:padding="5dp"
            android:text="4"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="2"
            android:paddingRight="16dp"
            android:src="@drawable/man_u_logo" />
    </LinearLayout>


</RelativeLayout>
