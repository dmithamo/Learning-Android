<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dennis.myellowpages.MainActivity"
    android:background="#cc000000"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="4"
            android:textSize="18sp"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:textColor="#ffff00"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:text="mYellowPages"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/agenda"
            android:layout_gravity="end"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_marginStart="16dp">

        <RelativeLayout
            android:id="@+id/relative_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
            android:id="@+id/entry_orchard"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/applepic"
                android:scaleType="centerCrop"
                android:scaleX="-1"/>
            <TextView
                android:id="@+id/the_ochard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff000"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:padding="8dp"
                android:background="#000000"
                android:layout_alignParentStart="true"
                android:text="theOrchard"/>

            <TextView
                android:id="@+id/orchard_descr"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:fontFamily="cursive"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="68dp"
                android:paddingTop="20dp"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/the_ochard"
                android:text="Your one stop shop for fresh fruit and vegetables. Eat healthy. Stay productive.\n\nWe deliver within Nairobi for free.."/>

            <LinearLayout
                android:id="@+id/the_orchard_full"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:background="#000000">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/mapicon"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif"
                    android:paddingTop="5dp"
                    android:text="Garden City Mall, 2nd Flr."/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="start"
                    android:src="@drawable/whatsappicon"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:paddingTop="5dp"
                    android:text="+254 700 000 000\n+254 733 333 333"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:paddingTop="10dp"
                    android:src="@drawable/calendar"
                    android:layout_weight="1"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:paddingTop="5dp"
                    android:paddingRight="5dp"
                    android:text="24/7"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_alignParentBottom="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>


            <RelativeLayout
                android:id="@+id/entry_media"
                android:layout_below="@id/entry_orchard"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:src="@drawable/cambiz"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tnane_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff000"
                    android:textSize="20sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#000000"
                    android:layout_alignParentStart="true"
                    android:text="Accessorize Inc"/>

                <TextView
                    android:id="@+id/access_descr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:paddingEnd="38dp"
                    android:paddingStart="8dp"
                    android:gravity="start"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_above="@id/media_contact"
                    android:text="Need to accessorize? Hooked on quality?\nWe've got you covered\nGet in touch with us for designer glasses, wristwatches, vintage cameras, and etc."/>

                <LinearLayout
                    android:id="@+id/media_contact"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:background="#000000">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/mapicon"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:paddingTop="5dp"
                        android:text="46, Naivasha Rd., Kawangware."/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:paddingTop="10dp"
                        android:layout_gravity="end"
                        android:src="@drawable/instagramicon"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:paddingTop="5dp"
                        android:text="\@accessorizeInc"/>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:paddingTop="10dp"
                        android:src="@drawable/calendar"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:text="Daily\n9am-10pm"/>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:layout_alignParentBottom="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:layout_alignParentTop="true"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/entry_meathub"
                android:layout_below="@id/entry_media"
                android:layout_width="wrap_content"
                android:layout_height="320dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/legit_meat"
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:src="@drawable/meathub"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/legit_meathub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff000"
                    android:textSize="20sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="#000000"
                    android:layout_alignParentStart="true"
                    android:text="Legit MeatHub"/>

                <TextView
                    android:id="@+id/legit_descr"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:fontFamily="cursive"
                    android:textStyle="bold"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="20dp"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/legit_meathub"
                    android:text="A cut above the best\nFor prime beef, cheron, pork and mutton"/>

                <LinearLayout
                    android:layout_below="@id/legit_meat"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:background="#000000">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/mapicon"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif"
                        android:paddingTop="5dp"
                        android:text="Kihunguro, Nairobi"/>


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingTop="10dp"
                        android:src="@drawable/cellphoneicon"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="start"
                        android:fontFamily="sans-serif"
                        android:paddingTop="15dp"
                        android:text="+254 729 999 000"/>



                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:paddingTop="10dp"
                        android:src="@drawable/calendar"
                        android:layout_weight="1"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:text="Mon-Sat\n8am-8pm"/>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:layout_alignParentBottom="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:layout_alignParentTop="true"/>


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>



</RelativeLayout>